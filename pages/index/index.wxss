.timer--runing .timer_ctrl {
  background-color: #6dade6;
  height: 70rpx;
  border-radius: 20px;
  background-image: none;
  color: white;
  align-items: center;
  margin: 50rpx;
}
.timer--runing .timer_ctrl_2 {
  background-color: #74cc74;
  height: 70rpx;
  border-radius: 20px;
  background-image: none;
  color: white;
  align-items: center;
  margin: 50rpx;
}
.timer--runing .timer_main {
  flex: 1;
}

.timer--runing .timer_time {
  font-size: 45px;
}

.timer--runing .timer_time-wrap {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_progress {
  width: 100px;
  height: 200px;
}

.timer--runing .timer_circle {
  width: 200px;
  height: 200px;
}

.timer--runing .timer_footer {
  flex: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 10;
}
